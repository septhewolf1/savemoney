<!DOCTYPE html>
<html>
  <head>
    <title>Savemoney</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<% if session[:user_id] %>
    <%= image_tag current_user.image_url, alt: current_user.name, size: "70x70" %>
    <div class="container">
      <ul class="nav nav-pills" role="tablist">
        <li><%= link_to 'Welcome', welcome_index_path %></li>
        <li><%= link_to 'Income', incomes_path %></li>
        <li><%= link_to 'Expenses', expenses_path %></li>
        <li><%= link_to 'Category', categories_path %></li>
        <li><%= button_to 'Log Out', logout_path, method: :delete %></li>
      </ul>
    </div>
	<% end %>
    <%= yield %>
  </body>
</html>
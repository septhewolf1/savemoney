<p id="notice"><%= notice %></p>

<h1>Incomes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Category</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.amount %></td>
        <td><%= Category.find(income.categories_id).title %></td>
        <td><%= income.description %></td>
        <td><%= income.date %></td>
        <td><%= link_to 'Show', income %></td>
        <td><%= link_to 'Edit', edit_income_path(income) %></td>
        <td><%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Income', new_income_path, class: 'btn btn-default' %>
<%= link_to 'Back', welcome_index_path, class: 'btn btn-default' %>
